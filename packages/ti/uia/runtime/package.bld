var commonBld = xdc.loadCapsule("ti/uia/build/common.bld");

var objList = [
    "CtxFilter",
    "LoggerCircBuf",
    "LoggerProbePoint",
    "LoggerStopMode",
    "LoggerSM",
    "LogSnapshot",
    "LogSync",
    "QueueDescriptor",    
    "ServiceMgr",
    "UIAPacket",
];

var trgFilter = {
    field: "isa",
    list: [
        "64", "64P", "64T", "66", "674", "v5T", "v7A", "v7M", "v7M4"
    ],
};

/* generate makefiles */
commonBld.buildLibs(objList, undefined, trgFilter, arguments);

var objList2 = [
//    "CtxFilter",
    "LoggerCircBuf",
    "LoggerProbePoint",
    "LoggerStopMode",
    "LoggerSM",
    "LogSnapshot",
    "LogSync",
    "QueueDescriptor",    
//    "ServiceMgr",
    "UIAPacket",
];

var trgFilter2 = {
    field: "isa",
    list: [
        "28FP",
        "430X"
    ],
};

/* generate makefiles */
commonBld.buildLibs(objList2, undefined, trgFilter2, arguments);

Pkg.otherFiles = [ "package.bld", "LogUC.h", "java/package.jar", "LoggerCircBuf_defines.h", "LoggerStopMode_defines.h", "LoggerProbePoint_defines.h", "ServiceMgr.xml", "LoggerStopMode.xml", "LoggerProbePoint.xml", "LoggerCircBuf.xml" ];

